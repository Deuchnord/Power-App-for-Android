<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="light"
        android:entries="@array/pref_theme_array_display"
        android:entryValues="@array/pref_theme_array"
        android:icon="@drawable/ic_theme"
        android:key="AppTheme"
        android:summary="@string/pref_theme_summary"
        android:title="@string/pref_theme" />

    <Preference
        android:key="about"
        android:title="@string/about"
        android:summary="@string/about_summary"
        android:icon="@drawable/ic_info" >
    </Preference>

    <Preference
        android:title="@string/pref_github"
        android:summary="@string/pref_github_summary"
        android:icon="@drawable/ic_source" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://github.com/Domi04151309/Power-App-for-Android" />
    </Preference>

</PreferenceScreen>
