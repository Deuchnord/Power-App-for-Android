<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="iconColor">?android:attr/textColorSecondary</item>
        <item name="buttonStyle">@style/Button.Borderless</item>
        <item name="secondaryButtonStyle">@style/Button</item>
    </style>

    <style name="AppTheme.9" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary.9</item>
        <item name="colorPrimaryDark">@color/colorPrimary.9</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="secondaryButtonStyle">@style/Button.9</item>
        <item name="android:windowBackground">@color/colorPrimary.9</item>
        <item name="actionBarTheme">@style/ActionBarTheme.9</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppTheme.8" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary.8</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.8</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarStyle">@style/ActionBarStyle.8</item>
        <item name="actionBarTheme">@style/ActionBarTheme.8</item>
    </style>

    <style name="AppTheme.7" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary.7</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.7</item>
        <item name="iconColor">?attr/colorAccent</item>
    </style>

    <style name="ActionBarStyle.8" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/ActionBarTitle.8</item>
    </style>

    <style name="ActionBarTheme.8" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme.9" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/actionBarTextColor</item>
    </style>

    <style name="ActionBarTitle.8" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Button.9" parent="Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Dark">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorDark</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Dark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor.Dark</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Dark.TwoTone" parent="Dark">
        <item name="colorPrimary">@color/colorPrimary.Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Dark</item>
    </style>

    <style name="Black" parent="Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:alertDialogTheme">@style/DialogTheme.Black</item>
        <item name="android:navigationBarColor">@color/navigationBarColor.Black</item>
    </style>

    <style name="DialogTheme.Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textColorPrimary">@color/textColorDark</item>
        <item name="android:textColorAlertDialogListItem">@color/textColorDark</item>
        <item name="android:windowBackground">@color/dark</item>
    </style>

    <style name="DialogTheme.Black" parent="DialogTheme.Dark">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="ActionBarTheme_8_Patch">
        <item name="actionBarTheme">@style/ActionBarTheme.8</item>
    </style>

    <style name="Theme_8_Patch" parent="ActionBarTheme_8_Patch">
        <item name="colorPrimaryDark">@color/colorPrimary.Dark</item>
    </style>

</resources>
